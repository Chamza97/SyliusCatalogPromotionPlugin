{
  "name": "snake-tn/catalog-promotion-plugin",
  "type": "sylius-plugin",
  "description": "Add catalog promotion to sylius application.",
  "keywords": [
    "sylius",
    "symfony"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Ahmed Kooli"
    }
  ],
  "minimum-stability": "beta",
  "require": {
    "sylius/sylius": "^1.0.0@beta",
    "webmozart/assert": "*",
    "symfony/symfony": "<3.3"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "SnakeTn\\CatalogPromotion\\": "src",
      "Tests\\SnakeTn\\CatalogPromotion\\": "tests"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^6.2",
    "liip/functional-test-bundle": "^1.7",
    "nelmio/alice": "^2.3"
  }
}
